<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="请输入游戏人数："
            android:textSize="@dimen/textsize_1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <NumberPicker
            android:id="@+id/numberpicker_avalon_settings_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/layout_margin"
        android:layout_weight="2">

        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="人数"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="好人"
                android:textColor="@color/avalon_good"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="坏人"
                android:textColor="@color/avalon_bad"
                android:textSize="@dimen/textsize_2" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="6"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="梅林、派西维尔、2个忠臣"
                android:textColor="@color/avalon_good"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="莫甘娜、刺客"
                android:textColor="@color/avalon_bad"
                android:textSize="@dimen/textsize_2" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="7"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="梅林、派西维尔、2个忠臣"
                android:textColor="@color/avalon_good"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="莫甘娜、刺客、奥伯伦"
                android:textColor="@color/avalon_bad"
                android:textSize="@dimen/textsize_2" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="8"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="梅林、派西维尔、3个忠臣"
                android:textColor="@color/avalon_good"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="莫甘娜、刺客、爪牙"
                android:textColor="@color/avalon_bad"
                android:textSize="@dimen/textsize_2" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="9"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="梅林、派西维尔、4个忠臣"
                android:textColor="@color/avalon_good"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="莫甘娜、刺客、黑老大"
                android:textColor="@color/avalon_bad"
                android:textSize="@dimen/textsize_2" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="10"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="梅林、派西维尔、4个忠臣"
                android:textColor="@color/avalon_good"
                android:textSize="@dimen/textsize_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="莫甘娜、刺客、黑老大、奥伯伦"
                android:textColor="@color/avalon_bad"
                android:textSize="@dimen/textsize_2" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_avalon_settings_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="@dimen/textsize_1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>